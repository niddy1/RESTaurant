<h1 class="table-header">Create Food</h1>


<form class="form"  action="/foods" method="post">

  <div class="form-group">
    <label >Name</label>
    <input class="form-control" type="text" name="food[name]" placeholder="Food Name?">
  </div>

  <div class="form-group">
    <label >Cuisine Type</label>
    <input class="form-control" type="text" name="food[cuisine_type]" placeholder="Cuisine Type?">
  </div>
  
  <div class="form-group">
    <label >Price</label>
    <input class="form-control" type="text" name="food[price]" placeholder="Price?">
  </div>

  <button type="submit" class="btn btn-default create-button">Create</button>
</form>
