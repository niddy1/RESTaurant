<h3>Kitchen Checks</h3>
<ul class="list-group-item ">

  <%@orders.each do |order|%>
    <li class="row list-group-item kitchen-orders">
      <span class="col-xs-2"><%=order.food.name%></span>


<span class="col-xs-6">
        <%=order.description%>
        </span>


        <p  class="order-time"><%=Time.now - order.created_at%>
        </p>



<span   class="col-xs-2">
  <form action="/orders/<%=order.id%>" method="post">
    <input type="hidden" name="_method" value="put">
    <input type="hidden" name="order[complete]" value="TRUE">
    <input type="submit" value="complete">
  </form>
</span>
<span class="col-xs-2">  Table:<%=order.party.table_number%></span>
</li>


  <%end%>
</ul>
